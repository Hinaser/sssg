#main[data-page="index"]
  background-color rgb(200, 230, 210)
  color #0F3B44
  height 100%
  width 100%
  position fixed

  .title
    $width = 400px
    $height = 440px

    box-shadow 0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19)
    border-radius 6px
    border 1px solid #A0A0A0
    background-color white
    width $width
    height $height
    position fixed
    centering $width, $height
    padding 20px 30px

    .title-logo
      margin-bottom 20px
      border none
      height 100px

    .short-name, .full-name, .description
      width 340px
      padding 5px

    .short-name
      height 30px
      display block
      border 1px solid #A0A0A0

    .full-name
      margin-top 20px
      height 30px
      border 1px solid #A0A0A0

    .description
      margin-top 20px
      font-size 14px
      font-style italic
      border 1px solid #A0A0A0

    .padding-top
      position absolute
      top 0
      left 60px
      border none
      border-left 1px dashed #999
      font-size 11px
      height 140px
      line-height 20px
      padding-left 10px

    .margin-int
      position absolute
      top 220px
      left 60px
      border none
      border-left 1px dashed #999
      font-size 11px
      height 20px
      line-height 20px
      padding-left 10px

    .padding-left
      position absolute
      top 155px
      left 0
      border none
      border-top 1px dashed #999
      font-size 11px
      width 30px
      padding-left 3px
      padding-top 10px

    .logos
      width 254px
      margin-top 20px
      margin-left auto
      margin-right auto
      border none
      img
        height 30px
        display inline-block
      a + a
        margin-left 10px

    .menu
      border none
      margin-top 40px
      width $width
      font-size 16px

      .menu-item
        border none
        width 100px
        float left
        text-align center
        border-radius 6px
        transition all ease 0.3s
        cursor pointer
        color rgb(100, 140, 240)
        height 26px
        line-height 26px

      .menu-item-arrow
        float left
        height 26px
        width 18px
        padding 5px 0
        border none
        margin 0 2px
        text-align center

    .menu-item:hover
      background-color rgb(200, 230, 210)

    .menu:after
      content ""
      display table
      clear both

  .layer
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    transition all ease 0.4s
    background-color transparent
    opacity 0.3
    z-index -1
    &.dark
      background-color rgb(0,0,0)
      z-index 10

  .popup
    position fixed
    top 50%
    left 50%
    width 540px
    height 360px
    margin-left -270px
    margin-top -180px
    opacity 1
    transition all ease 0.3s
    border-radius 6px
    background-color #fff
    z-index 11
    padding 0
    transform scale(1)
    box-shadow 0 10px 16px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19)

  .template
    padding 15px
    height 100%
    h1:first-child
      margin-top 10px
      margin-left 15px
    ol
      padding-left 20px
      > li
        > .caption
          font-weight bold
          border none
          margin-bottom 5px
        > .caption + code
          margin-top 16px
    ol > li + li
      margin-top 20px

  .popup.hidden
    transform scale(0)
    border none
    opacity 0

  .templates
    display none

  .navigate
    position relative
    margin-bottom 20px

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      -moz-transform: translateY(0);
      -ms-transform: translateY(0);
      -webkit-transform: translateY(0);
      transform: translateY(0);
    }
    40% {
      -moz-transform: translateY(-20px);
      -ms-transform: translateY(-20px);
      -webkit-transform: translateY(-20px);
      transform: translateY(-20px);
    }
    60% {
      -moz-transform: translateY(-15px);
      -ms-transform: translateY(-15px);
      -webkit-transform: translateY(-15px);
      transform: translateY(-15px);
    }
  }

  .arrow
    position relative
    background-image url("data:image/svg+xml;base64,")
    background-size contain
    animation bounce 2s infinite
    width 40px
    height 40px
    top 0
    left 50%
    margin-left -20px

  .btn
    width 200px
    display block
    padding 7px
    margin 15px auto 0 auto
    text-align center
    border-radius 6px
    color #fff
    border 3px solid #00D040
    background-color #008026
    text-decoration none
