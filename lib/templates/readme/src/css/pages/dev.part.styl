$sidebar-width = 400px

#main[data-page="dev"]
  code.inline
    display inline
    color #24292e
    padding 0.2em 0 0.2em 0
    margin 0
    font-size 85%
    font-family "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace
    background-color rgba(27,31,35,.05)
    border-radius 3px

  code.inline::before, code.inline::after
         letter-spacing -0.2em
         content: "\00a0"

  #sidebar-area
    z-index 20
    position fixed
    top 0
    left 0
    bottom 0
    width $sidebar-width
    background-color rgb(40, 180, 120)
    color #fff
    padding 0
    transition all ease 0.3s

    .sidebar-logo
      margin-top 20px
      position relative
      height 240px

      .circle
        width 240px
        height 240px
        border-radius 120px
        border 120px solid transparent
        background-color white
        position absolute
        top 0
        left 50%
        margin-left -120px

      img
        cursor pointer
        position relative
        top 70px
        display block
        margin 0 auto 0 auto
        transition transform ease 0.3s

      .rotate
        transform rotate(360deg) !important
      .rotate60
        transform rotate(60deg) !important
      .rotate120
        transform rotate(120deg) !important
      .rotate180
        transform rotate(180deg) !important
      .rotate240
        transform rotate(240deg) !important
      .rotate300
        transform rotate(300deg) !important
      .rotate360
        transform rotate(360deg) !important

    .sidebar-menu
      margin-top 20px
      margin-bottom 40px

      ul.nav
        list-style none
        padding-left 40px
        padding-right 40px
        transition all ease 0.3s

        li
          font-size 24px
          transition all ease 0.3s

          a
            display block
            width 100%
            text-decoration none
            color white
            transition all ease 0.4s
            border-radius 10px
            height 54px
            position relative

            .logo
              position absolute
              top 7px
              left 7px
              width 40px
              height 40px
              line-height 40px
              text-align center

            .logo-circle
              top 7px
              left 7px
              width 40px
              height 40px
              position absolute
              border-radius 20px
              border 2px solid white
              content ''

            .label
              position absolute
              top 7px
              left 54px
              height 40px
              line-height 40px
              overflow hidden

          a:hover
            background-color #fff
            color #2080df
            opacity 0.3

    .sidebar-toggle
      position fixed
      left 0
      bottom 0
      width 400px
      height 40px
      padding 2px 0
      display none

      a
        background-color rgba(50, 155, 100, 0.3)
        text-decoration none
        display block
        width 100%
        height 100%
        text-align center
        line-height 38px
        transition all ease 0.3s
        border 1px solid transparent
        cursor pointer
        position relative

        .to-expand, .to-collapse
          position absolute
          top 0
          right 0
          bottom 0
          left 0
          transition all ease 0.2s
          color #fff

        .to-expand
          opacity 0

        .to-collapse
          opacity 1

      a:hover
        background-color rgba(50, 155, 100, 0.7)
        border 1px solid rgba(50, 155, 100, 1)

  #content-area
    position fixed
    top 0
    left $sidebar-width
    bottom 0
    width "calc(100% - %s)" % $sidebar-width
    height 100%

    .hidden
      opacity 0
      z-index 0

    #content
      width 800px
      margin 20px auto 20px auto
      line-height 1.3

      h1
        font-size 2em
      h2
        font-size 1.2em

      h1
        margin-top 80px
      .overview-image + h1
        margin-top 20px

      .overview-image
        height 586px
        position relative

        img
          position absolute
          transition all ease 0.3s
          border 10px solid transparent
          border-radius 6px

        img.es6-sample
          top 0
          left 0
          border 10px solid transparent
          z-index 1

        img.es6-sample + img
          opacity 0
          top 180px
          left 440px
          border 2px solid rgb(33, 33, 33)

        img.stylus-sample
          top 60px
          left 100px
          z-index 2

        img.stylus-sample + img
          opacity 0
          top 240px
          left 560px
          border 2px solid rgb(33, 33, 33)

        img.pug-sample
          top 120px
          left 200px
          z-index 3

        img.pug-sample + img
          opacity 0
          top 300px
          left 660px
          border 2px solid rgb(33, 33, 33)

        img.dev-sample
          border none
          top 0
          left 0
          z-index 0

        img.result-sample
          top 0
          left 90px
          z-index 0

        .pug-sample:hover, .stylus-sample:hover, .es6-sample:hover
          z-index 4
          border 10px solid rgba(30,30,30,.4)
          box-shadow 6px 6px 3px 1px rgba(100, 100, 100, .2)

          & + img
            opacity 1
            z-index 4

        .switcher
          position absolute
          top 520px
          left calc(50% - 90px)
          width 180px
          height 40px

          .clickable
            position absolute
            top 0
            width 60px
            height 40px
            text-align center
            cursor pointer
            background-color transparent
            z-index 6

          .input
            left 0

          .dev
            left 60px

          .output
            right 0

          .btn
            position absolute
            top 10px
            left 10px
            width 20px
            height 20px
            transition all ease 0.4s
            cursor pointer
            z-index 5
            border-radius 10px
            border 3px solid rgb(70, 150, 180)
            background-color rgb(0, 240, 120)
            box-shadow 0 0 20px 6px rgba(0, 200, 120, .7)

          .btn.dev
            left 80px
            background-color rgb(70, 180, 140)
            box-shadow 0 0 20px 6px rgba(0, 100, 120, .4)

          .btn.out
            left 150px
            background-color rgb(70, 100, 120)
            box-shadow 0 0 20px 6px rgba(0, 100, 120, .4)

          .rail
            z-index 1
            position absolute
            top 16px
            left 20px
            right 20px
            height 8px
            border 2px solid green
            border-radius 4px
            background-color forestgreen

      .sssg-build-image
        margin-top 20px
        margin-bottom 20px
        text-align left
        width 800px

        img
          width 100%

      .outline-sample
        width 780px

        img
          width 100%

      .debug-screen
        width 600px

        img
          width 100%

      ul.sssg-does-few li
        line-height 1.8

      .command-format
        font-weight 800
        font-size 1.6em
        margin-bottom 15px
        color rgba(60,120,180,.9)

      ul.list-of-commands
        list-style none
        padding-left 0

        li a
          text-decoration none
          font-weight normal
          font-size 1.1em
          color rgb(40,120,180)

          &:hover
            text-decoration underline


      .command
        border-bottom 1px solid rgba(33,33,33,.4)
        padding 15px

        h3
          font-weight normal
          font-size 1.1em
          color rgb(40,120,180)

        .description
          color rgba(33,33,33,1)
          line-height 1.5
          font-size 14px

          pre.sample
            font-size 13px
            padding-left 40px

          .option
            padding-left 20px

            .label
              color rgb(40,120,180)

          .option + .option
            margin-top 20px